<UserControl x:Class="RussianCal.ButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RussianCal"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">

    <Grid MinHeight="50" MinWidth="50" HorizontalAlignment="Center" VerticalAlignment="Center" >
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="DateTextBlock"></TextBlock>
            <Image x:Name="ButtonImage" MinHeight="40" MinWidth="40"
                Grid.Row="1" Source="/music.png" >
            </Image>
    </Grid>

</UserControl>
